<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/tvContainer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#0000cd"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/baseline_navigate_before_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            android:text="İlan Detayı"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/baseline_star_border_24" />

    </LinearLayout>

    <TextView
        android:id="@+id/textCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DERİN YAPI'DAN DENİZ MANZARALI DUBLEKS DAİREMİZ SİZLERİ BEKLİYOR"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvContainer"
        android:layout_marginLeft="15dp"/>

    <ImageView
        android:id="@+id/tvHome"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/home"
        android:scaleType="centerCrop"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCategory" />

    <TextView
        android:id="@+id/textDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="DERİN YAPI GAYRİMENKUL"
        android:textColor="#0000cd"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHome" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0000cd"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/textDetail"/>





</androidx.constraintlayout.widget.ConstraintLayout>